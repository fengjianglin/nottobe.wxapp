.wrapper {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  border-bottom: 1px #eeeeee solid;
  padding-bottom: 16rpx;
  padding-top: 8rpx;
}
.avatar {
  margin: 8rpx;
  width: 64rpx;
  height: 64rpx;
  border: 4rpx #ddd solid;
}

.name {
  width: 636rpx;
  font-size: 28rpx;
  color: #525691;
  font-weight: 600;
  margin-left: 8rpx;
  margin-top: 10rpx;
}

.text {
  width: 636rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  letter-spacing: 0px;
  margin-top: 10rpx;
  margin-left: 8rpx;
}

.text text.fold {
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.text view {
  color: #525691;
  margin-top: 8rpx;
}

.images {
  width: 646rpx;
  margin-top: 10rpx;
  margin-left: 8rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}

.images image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}

.tools {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}

.tools .left, .tools .right {
  display: flex;
  flex-direction: row;
}

.tools .time {
  margin-left: 8rpx;
  color: #999;
  font-size: 28rpx;
}

.tools .del {
  color: #525691;
  font-size: 28rpx;
  margin-left: 24rpx;
}

image.comment, image.up, image.upped {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.ups_comments {
  margin-left: 8rpx;
  width: 636rpx;
}

.ups_comments .up_arrow{
  width: 0px;
  height: 0px;
  margin-left: 20rpx;
  border-top: 10rpx solid rgba(0,0,0,0);
  border-right: 14rpx solid  rgba(0,0,0,0);
  border-bottom: 10rpx solid #e9e9e9;
  border-left: 14rpx solid  rgba(0,0,0,0);
}

.up_list {
  background-color: #e9e9e9;
  padding: 8rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
}

.up_list_icon {
  width: 24rpx;
  height: 24rpx;
  padding: 0rpx 6rpx 0rpx 0rpx;
  margin-top: 6rpx;
  margin-bottom: 6rpx;
}

.comma {
  font-size: 24rpx;
  line-height: 24rpx;
  margin-top: 6rpx;
  margin-bottom: 6rpx;
}
.up_name {
  font-size: 24rpx;
  line-height: 24rpx;
  margin-top: 6rpx;
  margin-bottom: 6rpx;
  color: #525691;
}

/* COMMENT INPUT */
.comment-view {
  width: 750rpx;
  height: 88rpx;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #e9e9e9;
}

.comment-input {
  width: 654rpx;
  height: 56rpx;
  margin: 16rpx 32rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 28rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  border-radius: 8rpx;
  background-color: #fff;
}