
.wrapper {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-end;
}

.post, .post::after {
  margin-right: 36rpx;
  color: #20bf12;
  font-weight: 600;
  background:rgba(0, 0, 0, 0);
  border: none;
  border-radius: 0;
}

textarea {
  width: 646rpx;
  padding: 16rpx;
  margin: 16rpx 52rpx;
}

.images {
  width: 646rpx;
  margin: 10rpx 52rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}

.images image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}